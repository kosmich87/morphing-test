<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kkurtukov.morfing.views.RobotoBoldTextView
        android:id="@+id/fragment_start_main_title"
        style="@style/CustomTextView.Root"
        android:text="@string/main_title"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/fragment_start_main_image"
        style="@style/CustomImageview.PhotoMain"
        android:src="@drawable/main"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fragment_start_main_title" />

    <com.kkurtukov.morfing.views.RobotoTextView
        android:id="@+id/fragment_start_second_title"
        style="@style/CustomTextView.Second"
        android:text="@string/second_title"
        android:gravity="center_horizontal"
        android:layout_below="@+id/fragment_start_main_image" />

    <com.kkurtukov.morfing.views.CustomImageViewWithCheckbox
        android:id="@+id/fragment_start_first_image"
        style="@style/CustomImageview.PhotoSecond"
        app:customImageViewWithCheckboxIconSrc="@drawable/first"
        app:customImageViewWithCheckboxCheckedIconSrc="@drawable/ic_done_black_24dp"
        app:customImageViewWithCheckboxNonCheckedIconSrc="@drawable/ic_done_white_24dp"
        android:layout_below="@+id/fragment_start_second_title"
        android:layout_toLeftOf="@+id/fragment_start_second_image" />

    <com.kkurtukov.morfing.views.CustomImageViewWithCheckbox
        android:id="@+id/fragment_start_second_image"
        style="@style/CustomImageview.PhotoSecond"
        app:customImageViewWithCheckboxIconSrc="@drawable/second"
        app:customImageViewWithCheckboxCheckedIconSrc="@drawable/ic_done_black_24dp"
        app:customImageViewWithCheckboxNonCheckedIconSrc="@drawable/ic_done_white_24dp"
        android:layout_below="@+id/fragment_start_second_title"
        android:layout_centerHorizontal="true" />

    <com.kkurtukov.morfing.views.CustomImageViewWithCheckbox
        android:id="@+id/fragment_start_third_image"
        style="@style/CustomImageview.PhotoSecond"
        app:customImageViewWithCheckboxIconSrc="@drawable/third"
        app:customImageViewWithCheckboxCheckedIconSrc="@drawable/ic_done_black_24dp"
        app:customImageViewWithCheckboxNonCheckedIconSrc="@drawable/ic_done_white_24dp"
        android:layout_below="@+id/fragment_start_second_title"
        android:layout_toRightOf="@+id/fragment_start_second_image" />

</RelativeLayout>